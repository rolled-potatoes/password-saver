{
  "name": "rolled-password",
  "version": "0.1.0",
  "private": true,
  "main": "./app/main.js",
  "homepage": ".",
  "dependencies": {
    "axios": "^0.21.1",
    "crypto-js": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.39.3",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0"
  },
  "scripts": {
    "react:start": "react-scripts start",
    "electron:start": "wait-on http://localhost:3000 && electron .",
    "start": "NODE_ENV=development concurrently \"npm run react:start\" \"npm run electron:start\" ",
    "build:xos": "electron-builder --mac",
    "build:react": "react-scripts build",
    "build": "npm run build:react && npm run build:xos",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "build": {
    "productName": "rolled_password",
    "appId": "rolled-potatoes",
    "asar": true,
    "files": [
      "./build/**/*",
      "./app/**/*"
    ],
    "extends": null,
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./app/ham.icns"
    },
    "dmg": {
      "title": "rolled_password",
      "icon": "./app/ham.icns"
    },
    "directories": {
      "buildResources": "./build/",
      "output": "./dist/"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^13.1.6",
    "electron-builder": "^23.0.2",
    "wait-on": "^6.0.0"
  }
}
